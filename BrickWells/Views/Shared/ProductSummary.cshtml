@using BrickWells.Infrastructure
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Product

<a href="@Url.Action("ProductDetails", "Home", new { id = Model.ProductId })" class="card-link">
    <div class="card card-style" style="width: 300px; height: 450px;">
        <img class="card-img-top" style="height: 10rem;" src=@Model.ImgLink alt="Image">
        <div>
            <h4 class="card-text">@Model.Name</h4>
            <p class="card-text">Category: @Model.Category</p>
            <h4 class="card-text">Price: $@Model.Price</h4>
        </div>

        <form id=@Model.ProductId method="post" asp-page="/Cart">
            <input type="hidden" asp-for="ProductId"/>
            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()"/>
            <button type="submit" class="btn-primary-cart">Add to Cart.</button>
        </form>
    </div>
</a>
