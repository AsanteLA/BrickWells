@using BrickWells.Infrastructure
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Cart

<div class="">
    @if (Model.Lines.Count() > 0)
    {
        <small class="navbar-text">
            <b>Your Cart</b>
            @Model.Lines.Sum(x => x.Quantity) items(s)
            @Model.CalculateTotal().ToString("C")
        </small>
    }
    @* <a class="btn btn-sm btn-secondary navbar-btn" asp-page="/Cart" asp-route-returnUrl="@ViewContext.HttpContext.Request.PathAndQuery()"> *@
    <a class="transparent-button" asp-page="/Cart" asp-route-returnUrl="@ViewContext.HttpContext.Request.PathAndQuery()">
        @* <i class="fa fa-shopping-cart"></i> *@
        <img src="/img/Lego_imgs/shop-no-bg.png" style="max-height: 45px; margin-top: 3px" alt="Shopping Cart">
    </a>
</div>