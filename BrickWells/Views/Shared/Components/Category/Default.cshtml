@model IQueryable<string>

<div class="d-grid gap-2">
    <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Products" asp-route-category="" asp-route-pageNum="">All Products</a>
            @foreach (string category in Model ?? Enumerable.Empty<string>())
            {
                <a class="btn @(category == ViewBag.SelectedCategory ? "btn-primary" : "btn-outline-secondary")" asp-controller="Home" asp-action="Products" asp-route-category="@category" asp-route-pageNum="1">@category</a>
            }
</div> 