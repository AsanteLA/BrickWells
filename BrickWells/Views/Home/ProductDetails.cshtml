@{
    ViewData["Title"] = "Product Details";
    var product = ViewBag.ProductToGet as Product;
    var recommendedProducts = ViewBag.RecommendedProducts as List<Product>;
}

<div class="card">
    <div class="card-header">
        <h4>@product.Name</h4>
        <p>meh</p>
    </div>
    <div class="card-body">
        <img src="@product.ImgLink" alt="">
        <ul class="list-group">
            <li>@product.Price</li>
            <li>@product.Year</li>
            <li>@product.Category</li>
        </ul>
    </div>
</div>
    <div class="card card-style" style="width: 500px; height: 3000px;">
        <img class="card-img-top card-im-per" style="height: 10rem;" src=@product.ImgLink alt="Image">
        <div>
            <h4 class="card-text">@product.Name</h4>
            <p class="card-text">Year: @product.Year</p>
            <p class="card-text">Number of Parts: @product.NumParts</p>
            <p class="card-text">Price: $@product.Price</p>
            <p class="card-text">Category: @product.Category</p>
            <p class="card-text">Description: @product.Description</p>
        </div>
        </div>

@foreach (var recProduct in recommendedProducts as List<Product>)
{
    <div>
        <h3>@recProduct.Name</h3>
        <p>@recProduct.Description</p>
        <p>@recProduct.Price</p>
        <img src="@recProduct.ImgLink" alt="Product Image">
    </div>
}





